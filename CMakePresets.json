{
  "version": 3,
  "configurePresets": [
    {
      "name": "vs2022-windows-base",
      "description": "Base preset for VS2022. Inherit this in CMakeUserPresets.json and add DEPENDENCIES_DIR, QT_ROOT, and PYTHON_ROOT.",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/vsbuild",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "RelWithDebInfo"
        },
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "PATH",
          "value": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows-static-md"
        }
      }
    },
    {
      "name": "vs2022-windows-ci",
      "description": "VS2022 preset for CI builds",
      "inherits": "vs2022-windows-base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "PATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs2022-windows-ci",
      "configurePreset": "vs2022-windows-ci",
      "configuration": "RelWithDebInfo"
    }
  ]
}
